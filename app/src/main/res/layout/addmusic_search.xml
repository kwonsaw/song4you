<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/savepopup_bg">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="음원 등록"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="노래 제목 입력"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/musicText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:maxLength="12"
        android:focusable="true"
        android:textSize="15dp"
        android:focusableInTouchMode="true"
        android:hint="  노래 제목을 입력해주세요."
        android:inputType="text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="재생 플레이어 선택"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="15dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/r_btn1"
        android:text="멜론"
        android:textSize="15dp"
        android:checked="true"
        android:buttonTint="@color/purple_200"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RadioButton
        android:id="@+id/r_btn2"
        android:text="지니"
        android:textSize="15dp"
        android:buttonTint="@color/purple_200"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="주의 사항"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="· 노래 제목을 정확히 입력해주세요.\n· 포인트(최소 50P)가 부족한 경우, 등록이 완료되지 않습니다.\n· 직접 등록이 어려우신 경우, 내정보 > 음원등록 신청 메뉴를 이용해주세요."
        android:ellipsize="end"
        android:textColor="@color/darkgray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:text="취소"
            android:textColor="@color/black"
            android:background="@drawable/button_stroke"
            android:stateListAnimator="@null"
            android:textSize="15dp" />


        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@color/purple_200"
            android:stateListAnimator="@null"
            android:text="다음"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>





</LinearLayout>