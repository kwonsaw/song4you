<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77000000"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:background="@drawable/bg_maincampaign_row">

            <ImageView
                android:id="@+id/store_gift_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/store_gift_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#6c6c6c"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/store_gift_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/store_gift_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:typeface="sans" />

            <TextView
                android:id="@+id/store_gift_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="10dp"
                android:textColor="@color/red"
                android:typeface="sans" />

            <TextView
                android:id="@+id/store_gift_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/store_gift_barcode"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/copyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scaleType="centerCrop"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textSize="18dp"
                android:background="@drawable/button_round"
                android:text="핀번호 복사" />

        </LinearLayout>

        <ImageView
            android:id="@+id/store_img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:src="@android:drawable/ic_menu_close_clear_cancel"/>

    </RelativeLayout>

</LinearLayout>
