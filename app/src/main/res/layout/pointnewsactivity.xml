<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobon="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/bio_scroll"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/pointnews_detail_top"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="적립 확인중"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/pointnews_detail_help"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="14dp"/>

        <ProgressBar
            android:layout_toRightOf="@+id/pointnews_detail_help"
            android:id="@+id/pointnews_detail_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/web_loading_progressbar"
            android:layout_width="fill_parent"
            android:layout_centerVertical="true"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="top"
            android:max="100" />


    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_above="@+id/tnkAdView"
        android:id="@+id/pointnews_detail_web"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/tnkAdView"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"/>


</LinearLayout>