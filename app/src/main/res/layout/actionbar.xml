<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/mainicon_btn_lay">

        <TextView
            android:id="@+id/mainicon_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mainicon_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainicon_btn_lay"
        android:layout_width="57dp"
        android:layout_height="30dp"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/mainicon_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_mode_24"/>

        <TextView
            android:id="@+id/maincion_btn_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="15dp"
            android:layout_alignRight="@+id/mainicon_btn"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="등록"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="16dp"
            android:id="@+id/season2_navi_wrritebtn"/>

        <TextView
            android:id="@+id/web5s_count"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:text="0"
            android:textSize="19dp"
            android:visibility="gone"
            android:background="@drawable/web5scountbg"
            android:textColor="@color/purple_500"/>
    </RelativeLayout>

</RelativeLayout>